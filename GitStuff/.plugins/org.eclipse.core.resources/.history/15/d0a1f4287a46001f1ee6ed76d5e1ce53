package SauceDemoApp;

import java.time.Duration;
import java.util.List;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.testng.Assert;
import org.testng.annotations.Test;

import SauceDemoApp.pageobjects.CartPage;
import SauceDemoApp.pageobjects.CheckOutPage;
import SauceDemoApp.pageobjects.LoginPage;
import SauceDemoApp.pageobjects.ProductCatalouge;

public class EndToEndTestCase2 {
	
	@Test
	public void saucedemo()
	{
		//Elements
		String productName="Sauce Labs Fleece Jacket";
		
		WebDriver driver=new ChromeDriver();
		//Implicit Wait
		driver.manage().timeouts().implicitlyWait(Duration.ofSeconds(15));
		//Maximize screen
		driver.manage().window().maximize();
		
		//Login
		LoginPage login=new LoginPage(driver);
		//Opening the URL
		login.goTo("https://www.saucedemo.com/");
		
	
		
		//Adding elements to cart
		//Getting all items
		ProductCatalouge products=login.loginApplication("standard_user", "secret_sauce");
		List<WebElement> productsList=products.getProductList();
		products.addProductToCartPage(productName);
		CartPage cartSelection=products.goToCartPage();
		Boolean valid_item=cartSelection.verifyProductDisplay(productName);
		Assert.assertTrue(valid_item);
		CheckOutPage checkoutprocess=cartSelection.goToCheckOutPage();
		checkoutprocess.paymentProcess("Sai", "Vang", "50062");
		checkoutprocess.submitOrder();
		
		driver.findElement(By.id("finish")).click();
		Assert.assertEquals(driver.findElement(By.xpath("//div/h2")).getText(),"Thank you for your order!");
		
		driver.close();
	}

}
