package coreJava;

public class nestedloops {

	public static void main(String[] args) {

		int a = 1;
		int b = 1;
		int c=3;
		for (int i = 0; i < 4; i++) {
			for (int j = 1; j <= 4 - i; j++) {
				System.out.print(a + "\t");
				a++;
			}
			System.out.println("");
		}

		System.out.println("********************************");

		for (int i = 0; i < 4; i++) {
			for (int j = 0; j <= i; j++) {
				System.out.print(b + "\t");
				b++;
			}
			System.out.println("");
		}

		System.out.println("********************************");

		for (int i = 1; i <= 4; i++) {
			for (int j = 1; j <= i; j++) {
				System.out.print(j + "\t");

			}
			System.out.println("");
		}

		System.out.println("********************************");

		for (int i = 1; i <=3; i++) {
			for (int j = 1; j <=3; j++) {
				System.out.print(c + "\t");
				c=c*3;

			}
			System.out.println("");
		}
	}

}
