package SeleniumFeature.SeleniumFeature;

import java.util.HashMap;
import java.util.Map;

import org.openqa.selenium.By;
import org.openqa.selenium.Keys;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.devtools.DevTools;
import org.testng.annotations.Test;

public class GeoLocation {
	
	@Test
	public void geoLocation() throws InterruptedException
	{
		ChromeDriver driver=new ChromeDriver();
		DevTools devTools=driver.getDevTools();
		
		devTools.createSession();
		
		Map<String, Object> coordinates=new HashMap<String, Object>();
		coordinates.put("latitude", 35);
		coordinates.put("longitude", 104);
		coordinates.put("accuracy", 1);
		
		
		driver.executeCdpCommand("Emulation.setGeolocationOverride", coordinates);
		driver.get("https://my-location.org/");
		driver.findElement(By.name("q")).sendKeys("Facebook",Keys.ENTER);
		Thread.sleep(3000);
		driver.findElements(By.cssSelector(".LC20lb")).get(0).click();
		System.out.println(driver.findElement(By.cssSelector("h1[class='default-ltr-cache-jpuyb8 e9eyrqp8']")).getText());
	}

}
