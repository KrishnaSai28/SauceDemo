package SeleniumFeature.SeleniumFeature;

import java.util.HashMap;
import java.util.Map;

import org.openqa.selenium.By;
import org.openqa.selenium.Keys;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.devtools.DevTools;
import org.testng.annotations.Test;

public class GeoLocation {
	
	@Test
	public void geoLocation()
	{
		ChromeDriver driver=new ChromeDriver();
		DevTools devTools=driver.getDevTools();
		
		devTools.createSession();
		
		Map<String, Integer> geoMetrics=new HashMap<String, Integer>();
		geoMetrics.put("latitude", 40);
		geoMetrics.put("longitude", 3);
		geoMetrics.put("accuracy", 1);
		
		
		driver.executeScript("Emulation.setGeolocationOverride", geoMetrics);
		driver.get("https://www.google.com/");
		driver.findElement(By.name("q")).sendKeys("Netflix",Keys.ENTER);
		driver.findElements(By.cssSelector(".LC20lb")).get(0).click();
		System.out.println(driver.findElement(By.cssSelector("h1[class='default-ltr-cache-jpuyb8 e9eyrqp8']")).getText());
	}

}
