package coreJava;

public class nestedloops {
	
	public static void main(String[] args) {
		
		int a=1;
		for (int i=0;i<4;i++)
		{
			for(int j=1;j<=4-i;j++)
			{
				System.out.print(a+"\t");
				a++;
			}
			System.out.println("");
		}
		
		for (int i=0;i<4;i++)
		{
			for(int j=0;j<=i;j++)
			{
				System.out.print(a+"\t");
				a++;
			}
			System.out.println("");
		}
	}
	


}
