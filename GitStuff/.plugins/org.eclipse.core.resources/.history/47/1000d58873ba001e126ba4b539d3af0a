package SeleniumFeature.SeleniumFeature;

import java.util.HashMap;
import java.util.Map;

import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.devtools.DevTools;

public class GeoLocation {
	
	public void geoLocation()
	{
		ChromeDriver driver=new ChromeDriver();
		DevTools devTools=driver.getDevTools();
		
		devTools.createSession();
		
		Map<String, Integer> geoMetrics=new HashMap<String, Integer>();
		geoMetrics.put("latitude", 40);
		geoMetrics.put("longitude", 3);
		geoMetrics.put("accuracy", 1);
		
		
		driver.executeScript("Emulation.setGeolocationOverride", geoMetrics);
	}

}
